<html>
<head>
<script>
var loadFile = function(event) {
	var image = document.getElementById('output');
	image.src = URL.createObjectURL(event.target.files[0]);
};
</script>
</head>
<body>
<table border=1>	
	<tr><td><img id="output" width="200" height="200"/></td></tr>
</table>	
<table>	
	<tr><td><input type="file"  accept="image/*" name="image" id="file"  onchange="loadFile(event)" style="display: none;"></td></tr>
	
	<tr><td></td></tr>
	<tr><td></td></tr>
	<tr><td></td></tr>
	<tr><td></td></tr>
	<tr><td></td></tr>
	<tr><td align=center><label for="file" style="cursor: pointer;">Upload Image</label></td></tr>
</table>
<p></p>
<p></p>
<p></p>
</body>
</html>